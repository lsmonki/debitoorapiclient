            "summary": "Get booked invoices headers.",
            "parameters": {
                "number": {
                    "location": "query",
                    "type": "string"
                },
                "reference": {
                    "location": "query",
                    "type": "string"
                },
                "isUnpaid": {
                    "location": "query",
                    "type": "string"
                },
                "isCreditNote": {
                    "location": "query",
                    "type": "string"
                },
                "customerId": {
                    "location": "query",
                    "type": "string"
                },
                "isEInvoiceRejected": {
                    "location": "query",
                    "type": "string"
                },
                "isEInvoiceAccepted": {
                    "location": "query",
                    "type": "string"
                },
                "einvoiceStatus": {
                    "location": "query",
